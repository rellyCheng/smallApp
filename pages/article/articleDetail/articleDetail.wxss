page{
  background-color: rgba(233, 232, 232, 0.342);
}


.title-box{
  top:0px;
  position:fixed;
  width: 100%;
  background: #fff;
}

.title-box image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #aaa;
  margin: 0rpx 20rpx;
  vertical-align: middle;
}

.title-box .name{
  vertical-align: middle;
  font-size: 30rpx
}

.title-box .fork{
  padding: 10rpx;
  float: right;
  vertical-align: middle;
  margin: 10rpx 40rpx ;
  font-size: 30rpx;
  color: rgb(43, 201, 96);
  border: 1rpx rgb(43, 201, 96) solid
}

.page-section{
  margin-top: 80rpx;
  font-size: 30rpx;
  padding: 20rpx;
  color: rgb(100, 99, 99)
}

.page-foot {
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items:center;
  padding: 0 20rpx;
  border-bottom: 2px;
  background-color: #fff
}
.comment-input{
  border: 1rpx rgb(218, 214, 214) solid;
  padding: 10rpx 10rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  flex-grow:2;
  background-color: rgb(218, 214, 214)
}
.comment-input-placeholder{
  margin-left: 20rpx
}
.like{
  flex-grow:1;
  margin-left: 20rpx;
}
.iconfont{
  margin-right: 20rpx;
}
.to-comment{
  flex-grow:1;
}

.page-comment{
  height: 100rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items:center;
  padding: 0 20rpx;
  border-bottom: 2px;
  background-color: #fff
}

.page-comment .image{
   flex-grow:1;
}

.page-comment .emoji{
   flex-grow:1;
}

.page-comment .commenting{
   flex-grow:2;
}

.page-comment .send{
   flex-grow:1;
}

.comment-list{
  /* margin-bottom: 80rpx; */
}

.comment-item{
  margin-top: 10rpx;
  background-color: #fff;
  padding: 30rpx 20rpx;
  /* display: flex;
  flex-direction: column; */
  display: grid;
  grid-template-columns: 15% 60% 25%;
  /* grid-template-rows: 50px 80px 200px; */
}

.item3 {
   
    grid-row-start: 1;
    grid-row-end: 3;
    /* background-color: red; */
}
.item3 image{
   border-radius: 50%;
}
.item4 {
    padding: 10px 0;
    grid-column-start: 2;
    grid-column-end: 4;
    /* background-color: green; */
}
.item4 .comment-content{
  font-size: 28rpx;
}
.item7{
    grid-column-start: 2;
    grid-column-end: 4;
    font-size: 28rpx;
    background-color: rgb(226, 223, 223);
    padding: 20rpx 20rpx;
    border: 2rpx #fff solid;
}
.item5 .name{
  font-size: 30rpx
}
.item5 .description{
  font-size: 28rpx;
  color: #aaa
}
.item6{
  justify-self: end;
  /* background-color: darkblue; */
}
.item6 .icon-dianzan{
  margin-right: 50rpx
}

.comment-item image{
  height: 100rpx;
  width: 100rpx;
}
