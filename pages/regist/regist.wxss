/* pages/regist/regist.wxss */


.title{
  text-align: center
}
.regist-bg {
	height:100%;
	/* background-image:linear-gradient(160deg,#b100ff 20%,#00b3ff 80%); */
	position:relative;
}
.regist-center {
	height:50px;
	/* border-radius:5px; */
	border-bottom:1px solid #00ACED;
	margin-bottom:30px;
	line-height:50px;
	padding:0 10px;
	box-sizing:border-box;
}

.regist-center .t-name {
	font-size:14px;
	float:left;
	height:100%;
	width:58px;
}

.regist-center .inp {
	font-size:14px;
	float:left;
	border:none;
	background:transparent;
	height:100%;
	outline:none;
}

.regist-center .inp.code-inp {
	width:120px;
}
.regist-center .get-code {
	float:right;
	height:100%;
}
.regist-center .get-code .code-btn {
	color:#a07941;
	font-size:12px;
	border:1px solid #a07941;
	border-radius:5px;
	padding:5px;
	box-sizing:border-box;
	cursor:pointer;
}
.regist-button {
	background-color:#1e90ff;
	height:50px;
	border-radius:5px;
	font-size:18px;
	color:#fff;
	text-align:center;
	line-height:50px;
	cursor:pointer;
}